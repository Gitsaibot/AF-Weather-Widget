<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:aix="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">
	
	<net.gitsaibot.af.ColorView
			android:id="@+id/color"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxWidth="25dip"
			android:maxHeight="25dip"
			aix:mode="color"
			aix:borderWidth="1px"
	    	aix:borderColor="#fff" />
	
	<View android:id="@+id/divider"
			android:background="#80706F6F"
			android:layout_width="1dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="12dip"
			android:layout_marginTop="5dip"
			android:layout_marginBottom="5dip" />
	
	<view	class="net.gitsaibot.af.ColorPreference$RevertHolder"
			android:id="@+id/revert"
			android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:paddingLeft="12dip"
        	android:paddingRight="12dip"
        	android:src="@drawable/ic_baseline_undo"
        	android:background="@drawable/revert_background"
        	android:scaleType="center" />
		
</LinearLayout>
